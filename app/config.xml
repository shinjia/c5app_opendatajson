<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
		xmlns:gap   = "http://phonegap.com/ns/1.0"
		id	    = "tw.whatmake.shinjia.c5app.opendatajson"
		versionCode = "7" 
		version     = "0.1.6" >
 
	<name>opendatajson</name>
 
	<description>
		Open Data JSON
	</description>
 
	<author href="" email="shinjia168@gmail.com">
		Shinjia
	</author>
	
	<icon src="icon_512x512.png" />
	
	<!-- current version of PhoneGap -->
	
	<preference name='phonegap-version' value='cli-6.5.0' />
	
	<!-- 設定畫面固定為水平(landscape)、垂直(portrait) -->
	<preference name="orientation" value="portrait" />

	<!-- 加入其它plugin設定 -->
	<platform name="android">
    	<preference name="android-targetSdkVersion" value="26" />
	</platform>
	
    

	<!-- Add the whitelist plugin -->
	<plugin name="cordova-plugin-whitelist" spec="1.3.3" />

	<!-- The above is equivalent to these three declarations -->
	<allow-navigation href="http://*/*" />
	<allow-navigation href="https://*/*" />
	
	<access origin="*" />
    <allow-intent href="*" />
    <allow-navigation href="*" />

</widget>
